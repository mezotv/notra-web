---
import "../styles/global.css";
import { Content } from "../content/notra.mdx";
import FaviconLink from "../components/FaviconLink.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Notra</title>
	</head>
	<body class="bg-white dark:bg-zinc-900">
		<main
			class="relative z-10 mx-auto mt-16 max-w-xl px-4 py-4 text-zinc-900 dark:text-zinc-100"
		>
			<article class="prose dark:prose-invert prose-zinc">
				<Content components={{ a: FaviconLink }} />
			</article>
		</main>
	</body>
	<script
		src="https://cdn.databuddy.cc/databuddy.js"
		data-client-id="605510ad-be85-464c-89fe-db4c6a695cd1"
		data-track-outgoing-links="true"
		data-track-scroll-depth="true"
		data-track-web-vitals="true"
		crossorigin="anonymous"
		async></script>
</html>
